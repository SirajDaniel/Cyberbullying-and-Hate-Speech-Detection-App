{
  "manifest_version": 3,
  "name": "Twitter Toxic Agent",
  "version": "2.0",
  "permissions": ["activeTab", "scripting"],
 "host_permissions": [
  "https://twitter.com/*",
  "https://x.com/*",
  "https://cyberbullying-and-hate-speech-detection.streamlit.app/*"
],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content.js"],
      "matches": ["https://twitter.com/*", "https://x.com/*"]
    }
  ]
}

